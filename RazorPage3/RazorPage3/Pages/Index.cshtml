@page
@model RazorPage3.Pages.IndexModel
@{
    ViewData["Title"] = "GIAM";
}

<div class="layout">

    <aside id="sidebar" class="sidebar">
        <div class="sidebar-header d-flex align-items-center justify-content-between">
            <span class="fw-bold">Menú</span>
        </div>

        <nav class="nav flex-column sidebar-nav">
            <a href="#" class="nav-link active" data-target="#panel-lista" aria-current="page">
                📋 Ver tareas
            </a>
            <a href="#" class="nav-link" data-target="#panel-form">
                ➕ Registrar
            </a>
        </nav>
    </aside>

    <main id="content" class="content">

        <header class="header-bar mb-3 d-flex align-items-center">
            <h1 class="m-0">GESTION DE TAREAS :]</h1>
        </header>

        <section id="panel-lista" class="panel active" aria-labelledby="link-lista">
            <div class="card mb-3">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <span>Listado</span>
                    <form method="get" class="d-flex align-items-center gap-2" style="margin:0;">
                        <label for="filtro" class="me-2">Filtrar:</label>
                        <select id="filtro"
                                name="filtro"
                                class="form-select form-select-sm"
                                data-current="@Model.Filtro">
                            <option value="todos">Todos</option>
                            <option value="finalizado">Finalizado</option>
                            <option value="pendiente">Pendiente</option>
                            <option value="en curso">En curso</option>
                        </select>

                        <label for="tamano" class="ms-3 me-2">Mostrar:</label>
                        <select id="tamano"
                                name="tamano"
                                class="form-select form-select-sm"
                                data-current="@Model.TamanoPagina">
                            <option value="5">5</option>
                            <option value="10">10</option>
                            <option value="15">15</option>
                            <option value="20">20</option>
                        </select>

                        <input type="hidden" name="pagina" value="1" />
                        <button type="submit" class="btn btn-primary btn-sm ms-2">Aplicar</button>
                    </form>
                </div>

                <div class="card-body p-0">
                    <table class="table table-bordered m-0">
                        <thead>
                            <tr>
                                <th>Nombre Tarea</th>
                                <th>Fecha Vencimiento</th>
                                <th>Estado</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Tareas.Count == 0)
                            {
                                <tr><td colspan="5" class="text-center">Sin tareas</td></tr>
                            }
                            else
                            {
                                foreach (var t in Model.Tareas)
                                {
                                    <tr>
                                        <td>@t.nombreTarea</td>
                                        <td>@t.fechaVencimiento</td>
                                        <td><span class="@Model.Badge(t.estado)">@t.estado</span></td>
                                        <td>
                                            <button class="btn btn-warning btn-sm" disabled>Editar</button>
                                            <button class="btn btn-danger btn-sm" disabled>Eliminar</button>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>

                <div class="card-footer d-flex align-items-center justify-content-between">
                    <button id="btnCrearTarea" class="btn btn-success">Crear tarea</button>
                    <nav>
                        <ul class="pagination justify-content-center m-0">
                            <li class="page-item @(Model.PaginaActual == 1 ? "disabled" : "")">
                                <a class="page-link"
                                   asp-page="./Index"
                                   asp-route-pagina="@(Model.PaginaActual - 1)"
                                   asp-route-filtro="@Model.Filtro"
                                   asp-route-tamano="@Model.TamanoPagina">«</a>
                            </li>
                            @for (int i = 1; i <= Model.TotalPaginas; i++)
                            {
                                <li class="page-item @(i == Model.PaginaActual ? "active" : "")">
                                    <a class="page-link"
                                       asp-page="./Index"
                                       asp-route-pagina="@i"
                                       asp-route-filtro="@Model.Filtro"
                                       asp-route-tamano="@Model.TamanoPagina">@i</a>
                                </li>
                            }
                            <li class="page-item @(Model.PaginaActual == Model.TotalPaginas ? "disabled" : "")">
                                <a class="page-link"
                                   asp-page="./Index"
                                   asp-route-pagina="@(Model.PaginaActual + 1)"
                                   asp-route-filtro="@Model.Filtro"
                                   asp-route-tamano="@Model.TamanoPagina">»</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </section>

        <section id="panel-form" class="panel" aria-labelledby="link-form">
            <div class="card">
                <div class="card-header">Registrar nueva tarea</div>
                <div class="card-body">
                    <form method="post" class="mb-2">
                        <div class="mb-3">
                            <label for="Title" class="form-label">Ingresa tu tarea</label>
                            <input type="text" name="Title" id="Title" class="form-control" placeholder="....." required />
                        </div>

                        <div class="mb-3">
                            <label for="DueDate" class="form-label">Ingresa la Fecha</label>
                            <input type="date" name="DueDate" id="DueDate" class="form-control" required />
                        </div>
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary" disabled>Guardar</button>
                            <button type="reset" class="btn btn-outline-secondary">Limpiar</button>
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </main>
</div>
